%% Make table captions have bold names and smaller type.
%% \abovecaptionskip and \belowcaptionskip are defined in 'doc/Common/preamble.tex'
\long\def\@makecaption#1#2{
   \vskip\abovecaptionskip
   \setbox\@tempboxa\hbox{{\bf #1:} {\footnotesize #2}}
   \ifdim \wd\@tempboxa >\hsize   % IF longer than one line:
       \unhbox\@tempboxa\par      %   THEN set as ordinary paragraph.
     \else                        %   ELSE  center.
       \hbox to\hsize{\hfil\box\@tempboxa\hfil}
   \fi
   \vskip\belowcaptionskip
}
